<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<% highest = highest_average_rating %>
<% if highest.nil? == false %>
  <div class="row">
    <div class="col-md-6">
     <h>Recommended Restaurant: <b><%= highest[:restaurant] %></b>, which has an average rating of: <b><%= highest[:total_rating] %></b></h>
    </div>
  </div>
<% end %>

<div class="row"
  <div class="col-md-6 col-md-offset-3">
  <table class="table table-striped">
  	<thead>
  		<tr>
  			<th>Restaurant</th>
  			<th>Rating</th>
  			<th>Food Rating</th>
  			<th>Service Rating</th>
  		</tr>
  	</thead>
  	<tbody>
  		<% @ratings.each do |r| %>
  			<tr>
  				<td><%= r.restaurant %></td>
  				<td><%= r.rating %></td>
  				<td><%= r.food_rating %></td>
  				<td><%= r.service_rating %></td>
  			</tr>
  		<% end %> 
  	</tbody>
  </table>
</div>